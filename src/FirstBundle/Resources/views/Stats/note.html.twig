{# Item/Create #}

{% extends "FirstBundle:Layouts:layout.html.twig" %}

{% block title %}
    Note
{% endblock  %}

{% block content %}
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <h2>
                    Saisir une note
                </h2>
            </div>

        </div>
        <div class="row">

            <div class="col-md-4 col-md-offset-2">

                <form method="POST">
                    <div class="row">

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="type">Type</label>
                            </div>
                            <div class="col-xs-6">
                                <select id="type" name="type" class="form-control">
                                    <option value="cas">Dossier Clinique</option>
                                    <option value="qi">Questions Isolées</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="note">Note (/20)</label>
                            </div>
                            <div class="col-xs-6">
                                <input type="number" id="note" class="form-control"/>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="note">Matière</label>
                            </div>
                            <div class="col-xs-6">
                                <select id="field" class="form-control">
                                    {% for field in fields %}
                                        <option value="{{ field.id }}">{{ field.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-6 col-xs-offset-6">
                                <button id="mark-note" class="btn btn-ghost-green" ><span class="glyphicon glyphicon-pencil"></span>&nbsp;Ok</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>
{% endblock  %}


{% block js_scripts %}

    <script type="text/javascript">

        $(document).ready(function(){

            $("#mark-note").on('click', function(event){

                var ptype = $("#type").val();
                var pnote = $("#note").val();
                var pfield_id = $("#field").val();

                $.post(
                    '{{ path('mark_note', {'workset_id' : workset_id}) }}',
                    {
                        type : ptype,
                        note : pnote,
                        field_id : pfield_id
                    }
                )
                .done(function(data) {
//                    console.log(data);
                    $('#note').val("");

                });

                return false;
            });
        });
    </script>
{% endblock  %}